<style>
  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-control {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    background: #fff;
  }

  .form-control:focus {
    outline: none;
    border-color: #7c3aed;
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
  }

  .form-control:hover {
    border-color: #cbd5e1;
  }

  textarea.form-control {
    resize: vertical;
    min-height: 120px;
  }

  .form-check {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: #f8f9ff;
    border-radius: 10px;
    margin-bottom: 1.5rem;
  }

  .form-check-input {
    width: 20px;
    height: 20px;
    border: 2px solid #7c3aed;
    border-radius: 5px;
    cursor: pointer;
  }

  .form-check-input:checked {
    background-color: #7c3aed;
  }

  .form-check-label {
    font-weight: 600;
    color: #1e293b;
    cursor: pointer;
  }

  .btn-submit {
    background: linear-gradient(135deg, #7c3aed, #a855f7);
    color: white;
    padding: 0.9rem 2rem;
    border-radius: 10px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(124, 58, 237, 0.3);
  }

  .btn-submit i {
    font-size: 1.1rem;
  }

  .form-help {
    font-size: 0.85rem;
    color: #64748b;
    margin-top: 0.3rem;
  }

  .required-asterisk {
    color: #ef4444;
    margin-left: 0.2rem;
  }
</style>

{{ form_start(form) }}
  <div class="form-group">
    {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'form-label'}}) }}
    <span class="required-asterisk">*</span>
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'e.g., Character Design'}}) }}
    {{ form_errors(form.name) }}
  </div>

  <div class="form-group">
    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Describe what this category includes...'}}) }}
    {{ form_errors(form.description) }}
    <div class="form-help">Provide a brief description of this category</div>
  </div>

  <div class="form-group">
    {{ form_label(form.icon, 'Icon (Bootstrap Icon class)', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.icon, {'attr': {'class': 'form-control', 'placeholder': 'bi-palette-fill'}}) }}
    {{ form_errors(form.icon) }}
    <div class="form-help">Use Bootstrap Icons (e.g., bi-palette-fill, bi-brush, bi-pen). See <a href="https://icons.getbootstrap.com/" target="_blank">icons.getbootstrap.com</a></div>
  </div>

  <div class="form-check">
    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
    {{ form_label(form.isActive, 'Active Category', {'label_attr': {'class': 'form-check-label'}}) }}
    {{ form_errors(form.isActive) }}
  </div>

  {# Hide the unnecessary fields #}
  <div style="display: none;">
    {{ form_rest(form) }}
  </div>

  <button type="submit" class="btn-submit">
    <i class="bi bi-check-circle"></i> Create Category
  </button>
{{ form_end(form) }}