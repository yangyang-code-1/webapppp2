{# templates/admin_base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{% block title %}Admin Dashboard{% endblock %}</title>

  <!-- Bootstrap + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- DataTables -->
  <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">

  <style>
    :root{
      --primary-color: #370d46;
      --accent: #8b5cf6;
      --bg-light: #f9f5ff;
      --white: #fff;
      --shadow: 0 6px 22px rgba(19,14,57,0.06);
    }
    html,body{height:100%}
    body{
      font-family: 'Poppins',sans-serif;
      background: var(--bg-light);
      margin:0;
      display:flex;
      min-height:100vh;
      color:#2b2b2b;
      overflow-x:hidden;
    }

    /* sidebar */
    .sidebar{
      width:260px;
      background: linear-gradient(135deg,var(--primary-color),var(--accent));
      color:#fff;
      padding:1.25rem .9rem;
      position:fixed;
      top:0;bottom:0;left:0;
      z-index:1000;
      transition:width .28s ease;
      overflow:auto;
    }
    .sidebar.collapsed{width:76px}
    .sidebar .brand{
      display:flex;
      align-items:center;
      gap:.6rem;
      margin-bottom:1.4rem;
      white-space:nowrap;
    }
    .sidebar .brand i{font-size:1.25rem}
    .sidebar nav a{
      display:flex;
      align-items:center;
      gap:.75rem;
      padding:.7rem .65rem;
      border-radius:8px;
      color:#fff;
      text-decoration:none;
      margin-bottom:.2rem;
      transition:all .18s;
    }
    .sidebar nav a:hover, .sidebar nav a.active{
      background: rgba(255,255,255,0.12);
      transform:translateX(4px);
    }
    .sidebar nav a i{font-size:1.15rem}
    .sidebar .small-muted{opacity:.85;font-size:.86rem}

    .sidebar .submenu{
      padding-left:1rem;
      display:block;
    }
    .sidebar.collapsed .submenu, .sidebar.collapsed .label-text{display:none}

    /* main content */
    .content{
      margin-left:260px;
      flex:1;
      padding:1.6rem;
      transition:margin-left .28s ease;
    }
    .collapsed + .content{margin-left:76px}

    /* header */
    .topbar{
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap:1rem;
      margin-bottom:1.2rem;
    }
    .search-input{
      background:#fff;border-radius:10px;padding:.45rem .7rem;box-shadow:var(--shadow);
    }

    /* cards & tables */
    .stat-card{
      background:#fff;border-radius:14px;padding:1rem;box-shadow:var(--shadow);min-height:90px;
    }
    table.dataTable{background:#fff;border-radius:12px;box-shadow:var(--shadow);overflow:hidden}

    /* responsive tweaks */
    @media (max-width: 900px){
      .sidebar{position:relative;width:100%;height:auto}
      .content{margin-left:0;padding:1rem}
    }
  </style>

  {% block styles %}{% endblock %}
</head>
<body>
  <aside id="sidebar" class="sidebar">
    <div class="brand">
      <div>
        <img src="/Primary Logo.png" alt="ArtComms Logo" style="height:40px; object-fit: contain;">
      </div>
    </div>

    <nav>
  <nav>
    {# ADMIN-ONLY: Dashboard #}
    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('app_admin_dashboard') }}" class="{% if app.request.get('_route') starts with 'app_admin_dashboard' %}active{% endif %}">
        <i class="bi bi-speedometer2"></i> <span class="label-text">Dashboard</span>
      </a>
    {% endif %}

    {# BOTH ADMIN AND STAFF: Commissions #}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
      <a href="{{ path('app_commission_index') }}" class="{% if app.request.get('_route') starts with 'app_commission' %}active{% endif %}">
        <i class="bi bi-palette"></i> <span class="label-text">Commissions</span>
        {% if commission_count is defined and commission_count > 0 %}
          <span class="badge bg-light text-dark ms-auto">{{ commission_count }}</span>
        {% endif %}
      </a>
    {% endif %}

    {# BOTH ADMIN AND STAFF: Categories #}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
      <a href="{{ path('app_category_index') }}" class="{% if app.request.get('_route') starts with 'app_category' %}active{% endif %}">
        <i class="bi bi-folder2-open"></i> <span class="label-text">Categories</span>
        {% if category_count is defined %}
          <span class="badge bg-light text-dark ms-auto">{{ category_count }}</span>
        {% endif %}
      </a>
    {% endif %}

    {# ADMIN-ONLY: Users Section #}
    {% if is_granted('ROLE_ADMIN') %}
      <div class="mt-2">
        <a href="#" id="usersToggle" class="">
          <i class="bi bi-people"></i> <span class="label-text">Users</span>
          <i class="bi bi-caret-down-fill ms-auto label-text"></i>
        </a>
        <div class="submenu" id="usersSubmenu">
          <a href="{{ path('app_user_index', {'role': 'ROLE_ADMIN'}) }}" class="{% if app.request.get('_route') == 'app_user_index' and app.request.query.get('role') == 'ROLE_ADMIN' %}active{% endif %}">
            <i class="bi bi-person-badge"></i> <span class="label-text">Admins</span>
          </a>
          <a href="{{ path('app_user_index', {'role': 'ROLE_STAFF'}) }}" class="{% if app.request.get('_route') == 'app_user_index' and app.request.query.get('role') == 'ROLE_STAFF' %}active{% endif %}">
            <i class="bi bi-briefcase"></i> <span class="label-text">Staff</span>
            {% if staff_count is defined %}<span class="badge bg-light text-dark ms-auto">{{ staff_count }}</span>{% endif %}
          </a>
          <a href="{{ path('app_user_index', {'role': 'ROLE_USER'}) }}" class="{% if app.request.get('_route') == 'app_user_index' and app.request.query.get('role') == 'ROLE_USER' %}active{% endif %}">
            <i class="bi bi-person"></i> <span class="label-text">Users</span>
            {% if user_count is defined %}<span class="badge bg-light text-dark ms-auto">{{ user_count }}</span>{% endif %}
          </a>
        </div>
      </div>

      <a href="{{ path('app_activity_log_index') }}" class="{% if app.request.get('_route') starts with 'app_activity_log' %}active{% endif %}">
        <i class="bi bi-clock-history"></i> <span class="label-text">Activity Logs</span>
      </a>

      {# <a href="#" class="" onclick="alert('Transactions feature coming soon!')">
        <i class="bi bi-receipt"></i> <span class="label-text">Transactions</span>
        <span class="badge bg-warning text-dark ms-auto">Soon</span>
      </a>

      <a href="#" class="" onclick="alert('Reports feature coming soon!')">
        <i class="bi bi-bar-chart"></i> <span class="label-text">Reports</span>
        <span class="badge bg-warning text-dark ms-auto">Soon</span>
      </a>

      <a href="#" class="" onclick="alert('Settings feature coming soon!')">
        <i class="bi bi-gear"></i> <span class="label-text">Settings</span>
        <span class="badge bg-warning text-dark ms-auto">Soon</span>
      </a> #}
    {% endif %}
  </nav>

    <div style="position:absolute;bottom:1rem;left:1rem;right:1rem;font-size:.85rem;color:rgba(255,255,255,0.9)">
      <div>Signed in as <strong>{{ app.user ? (app.user.name ?? 'Admin') : 'Admin' }}</strong></div>
    </div>
  </aside>

  <main id="content" class="content">
    <div class="topbar">
      <div class="d-flex align-items-center gap-3">
        <i class="bi bi-list" id="sidebarToggle" style="font-size:1.5rem;cursor:pointer;color:var(--primary-color)"></i>
        <h4 class="mb-0">{% block header %}Dashboard{% endblock %}</h4>
      </div>

      <div class="d-flex align-items-center gap-2">
        <div class="search-input d-flex align-items-center gap-2">
          <i class="bi bi-search"></i>
          <input class="form-control border-0 p-0" style="width:220px" placeholder="Search..." />
        </div>

        <div class="position-relative">
          <i class="bi bi-bell" style="font-size:1.2rem;cursor:pointer"></i>
          {% if notifications_count is defined and notifications_count > 0 %}
            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle p-1 rounded-circle"></span>
          {% endif %}
        </div>

        <div class="dropdown">
          <a class="d-flex align-items-center text-decoration-none" href="#" id="userMenu" data-bs-toggle="dropdown">
            <i class="bi bi-person-circle" style="font-size:1.6rem;color:var(--primary-color)"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
            <li><a class="dropdown-item" href="#" onclick="alert('Profile feature coming soon!')">
              <i class="bi bi-person-circle me-2"></i>Profile
            </a></li>
            <li><a class="dropdown-item" href="{{ path('app_logout') }}">
              <i class="bi bi-box-arrow-right me-2"></i>Logout
            </a></li>
          </ul>
        </div>
      </div>
    </div>

    <div>
      {% block body %}
      {# Default dashboard body: quick stats + recent commissions #}
      <div class="row g-3 mb-3">
        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <div class="small-muted">Total Commissions</div>
                <div style="font-weight:700;font-size:1.15rem">{{ commission_count|default(0) }}</div>
              </div>
              <i class="bi bi-palette" style="font-size:1.7rem;color:var(--accent)"></i>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <div class="small-muted">Staff</div>
                <div style="font-weight:700">{{ staff_count|default(0) }}</div>
              </div>
              <i class="bi bi-briefcase" style="font-size:1.7rem;color:var(--accent)"></i>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <div class="small-muted">Users</div>
                <div style="font-weight:700">{{ user_count|default(0) }}</div>
              </div>
              <i class="bi bi-person" style="font-size:1.7rem;color:var(--accent)"></i>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <div class="small-muted">Categories</div>
                <div style="font-weight:700">{{ category_count|default(0) }}</div>
              </div>
              <i class="bi bi-folder2-open" style="font-size:1.7rem;color:var(--accent)"></i>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Recent Commissions</h5>
          <div class="table-responsive">
            <table id="commissionsTable" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Client</th>
                  <th>Artist</th>
                  <th>Status</th>
                  <th>Created</th>
                </tr>
              </thead>
              <tbody>
                {% for c in recent_commissions|default([]) %}
                  <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ c.title }}</td>
                    <td>{{ c.client ? c.client.name : '‚Äî' }}</td>
                    <td>{{ c.artist ? c.artist.name : '‚Äî' }}</td>
                    <td>{{ c.status }}</td>
                    <td>{{ c.createdAt ? c.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
                  </tr>
                {% else %}
                  <tr><td colspan="6" class="text-center">No recent commissions</td></tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      {% endblock %}
    </div>
  </main>

  <!-- JS -->
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- DataTables -->
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

  <script>
    // toggle sidebar collapse
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebarToggle');
    sidebarToggle.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
      document.getElementById('content').classList.toggle('collapsed');
    });

    // users submenu toggle
    document.getElementById('usersToggle').addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('usersSubmenu').classList.toggle('d-none');
    });

