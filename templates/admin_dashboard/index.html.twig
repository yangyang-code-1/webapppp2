{% extends 'admin_base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}
{% block header %}Overview{% endblock %}

{% block body %}
<style>
  .stat-card {
    background: linear-gradient(135deg, #fff 0%, #f8f9ff 100%);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    border: 1px solid rgba(139, 92, 246, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #7c3aed, #a855f7);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(124, 58, 237, 0.15);
  }

  .stat-card:hover::before {
    transform: scaleX(1);
  }

  .stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
  }

  .stat-card:hover .stat-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .stat-card.purple .stat-icon {
    background: linear-gradient(135deg, #7c3aed20, #a855f740);
    color: #7c3aed;
  }

  .stat-card.blue .stat-icon {
    background: linear-gradient(135deg, #3b82f620, #60a5fa40);
    color: #3b82f6;
  }

  .stat-card.green .stat-icon {
    background: linear-gradient(135deg, #10b98120, #34d39940);
    color: #10b981;
  }

  .stat-card.orange .stat-icon {
    background: linear-gradient(135deg, #f9731620, #fb923c40);
    color: #f97316;
  }

  .stat-card h5 {
    color: #64748b;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  .stat-card .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0;
  }

  .stat-card .stat-change {
    font-size: 0.85rem;
    color: #10b981;
    margin-top: 0.5rem;
  }

  .stat-card .stat-change.negative {
    color: #ef4444;
  }

  .section-title {
    position: relative;
    display: inline-block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #370d46ff;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #7c3aed, #a855f7);
    border-radius: 2px;
  }

  .table-container {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    overflow: hidden;
    border: 1px solid rgba(139, 92, 246, 0.1);
    margin-bottom: 2rem;
  }

  .table thead {
    background: linear-gradient(135deg, #7c3aed, #a855f7);
    color: white;
  }

  .table thead th {
    border: none;
    padding: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
  }

  .table tbody tr {
    transition: all 0.2s ease;
    border-bottom: 1px solid #f1f5f9;
  }

  .table tbody tr:hover {
    background-color: #f8f9ff;
    transform: scale(1.01);
  }

  .table tbody td {
    padding: 1rem;
    vertical-align: middle;
    color: #475569;
  }

  .status-badge {
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    display: inline-block;
  }

  .status-badge.pending {
    background: #fef3c7;
    color: #92400e;
  }

  .status-badge.completed {
    background: #d1fae5;
    color: #065f46;
  }

  .status-badge.in-progress {
    background: #dbeafe;
    color: #1e40af;
  }

  .status-badge.cancelled {
    background: #fee2e2;
    color: #991b1b;
  }

  .action-badge {
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-block;
  }

  .action-badge.login {
    background: #d1fae5;
    color: #065f46;
  }

  .action-badge.logout {
    background: #e5e7eb;
    color: #374151;
  }

  .action-badge.create {
    background: #dbeafe;
    color: #1e40af;
  }

  .action-badge.update {
    background: #fef3c7;
    color: #92400e;
  }

  .action-badge.delete {
    background: #fee2e2;
    color: #991b1b;
  }

  .price-tag {
    font-weight: 700;
    color: #7c3aed;
    font-size: 1.05rem;
  }

  .role-badge {
    padding: 0.3rem 0.7rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-block;
  }

  .role-badge.admin {
    background: linear-gradient(135deg, #ef444420, #f8717140);
    color: #991b1b;
  }

  .role-badge.staff {
    background: linear-gradient(135deg, #3b82f620, #60a5fa40);
    color: #1e40af;
  }

  .role-badge.user {
    background: linear-gradient(135deg, #10b98120, #34d39940);
    color: #065f46;
  }
</style>

<!-- Statistics Cards -->
<div class="row g-4 mb-5">
  <div class="col-md-3">
    <div class="stat-card purple">
      <div class="stat-icon">
        <i class="bi bi-palette-fill"></i>
      </div>
      <h5>Total Commissions</h5>
      <p class="stat-number">{{ commission_count|default(0) }}</p>
      <p class="stat-change">
        <i class="bi bi-graph-up"></i> All time
      </p>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="stat-card blue">
      <div class="stat-icon">
        <i class="bi bi-person-badge-fill"></i>
      </div>
      <h5>Staff Members</h5>
      <p class="stat-number">{{ staff_count|default(0) }}</p>
      <p class="stat-change">
        <i class="bi bi-check-circle"></i> Active
      </p>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="stat-card green">
      <div class="stat-icon">
        <i class="bi bi-people-fill"></i>
      </div>
      <h5>Registered Users</h5>
      <p class="stat-number">{{ user_count|default(0) }}</p>
      <p class="stat-change">
        <i class="bi bi-person-check"></i> Total
      </p>
    </div>
  </div>

  <div class="col-md-3">
    <div class="stat-card orange">
      <div class="stat-icon">
        <i class="bi bi-folder2-open"></i>
      </div>
      <h5>Categories</h5>
      <p class="stat-number">{{ category_count|default(0) }}</p>
      <p class="stat-change">
        <i class="bi bi-list-check"></i> Active
      </p>
    </div>
  </div>
</div>

<!-- Recent Commissions Table -->
<h3 class="section-title">
  <i class="bi bi-brush me-2"></i>Recent Commissions
</h3>

<div class="table-container">
  <table class="table table-hover mb-0" id="recentCommissionsTable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Client</th>
        <th>Artist</th>
        <th>Price</th>
        <th>Status</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for c in recent_commissions|default([]) %}
      <tr>
        <td><strong>#{{ c.id }}</strong></td>
        <td>
          <i class="bi bi-brush me-2" style="color: #7c3aed;"></i>
          {{ c.title }}
        </td>
        <td>{{ c.client ? c.client.name : '‚Äî' }}</td>
        <td>{{ c.artist ? c.artist.name : '‚Äî' }}</td>
        <td><span class="price-tag">‚Ç±{{ c.price|number_format(2, '.', ',') }}</span></td>
        <td>
          <span class="status-badge {{ c.status|lower|replace({' ': '-'}) }}">{{ c.status }}</span>
        </td>
        <td>{{ c.createdAt ? c.createdAt|date('Y-m-d') : '‚Äî' }}</td>
        <td>
          <a class="btn btn-sm btn-outline-primary" href="{{ path('app_commission_show', {'id': c.id}) }}">
            <i class="bi bi-eye"></i>
          </a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="8" class="text-center py-4">
          <i class="bi bi-inbox" style="font-size: 2rem; color: #cbd5e1;"></i>
          <p class="text-muted mt-2">No recent commissions</p>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<!-- Recent Activity Logs -->
<h3 class="section-title mt-4">
  <i class="bi bi-clock-history me-2"></i>Recent Activity
</h3>

<div class="table-container">
  <table class="table table-hover mb-0" id="recentActivityTable">
    <thead>
      <tr>
        <th>User</th>
        <th>Role</th>
        <th>Action</th>
        <th>Description</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <tbody>
      {% for activity in recent_activities|default([]) %}
      <tr>
        <td>
          <i class="bi bi-person-circle me-2" style="color: #7c3aed;"></i>
          <strong>{{ activity.user.name }}</strong>
        </td>
        <td>
          {% if activity.role == 'ROLE_ADMIN' %}
            <span class="role-badge admin">
              <i class="bi bi-shield-check"></i> Admin
            </span>
          {% elseif activity.role == 'ROLE_STAFF' %}
            <span class="role-badge staff">
              <i class="bi bi-briefcase"></i> Staff
            </span>
          {% else %}
            <span class="role-badge user">
              <i class="bi bi-person"></i> User
            </span>
          {% endif %}
        </td>
        <td>
          {% set action = activity.action|upper %}
          <span class="action-badge {{ action|lower }}">
            {% if action == 'LOGIN' %}
              <i class="bi bi-box-arrow-in-right"></i> Login
            {% elseif action == 'LOGOUT' %}
              <i class="bi bi-box-arrow-right"></i> Logout
            {% elseif action == 'CREATE' %}
              <i class="bi bi-plus-circle"></i> Create
            {% elseif action == 'UPDATE' %}
              <i class="bi bi-pencil"></i> Update
            {% elseif action == 'DELETE' %}
              <i class="bi bi-trash"></i> Delete
            {% else %}
              {{ action }}
            {% endif %}
          </span>
        </td>
        <td>{{ activity.description }}</td>
        <td>
          <small class="text-muted">
            <i class="bi bi-clock"></i>
            {{ activity.createdAt|date('Y-m-d H:i:s') }}
          </small>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="5" class="text-center py-4">
          <i class="bi bi-inbox" style="font-size: 2rem; color: #cbd5e1;"></i>
          <p class="text-muted mt-2">No recent activity</p>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  
  {% if recent_activities|length > 0 %}
  <div class="p-3 text-end border-top">
    <a href="{{ path('app_activity_log_index') }}" class="btn btn-sm btn-outline-primary">
      View All Activity Logs <i class="bi bi-arrow-right"></i>
    </a>
  </div>
  {% endif %}
</div>

{% endblock %}

{% block scripts %}
<script>
  $(document).ready(function(){
    if (document.getElementById('recentCommissionsTable')) {
      $('#recentCommissionsTable').DataTable({
        pageLength: 5,
        lengthMenu: [5, 10, 25],
        order: [[0, 'desc']],
        language: {
          search: "üîç Search:",
          lengthMenu: "_MENU_ per page",
          info: "Showing _START_ to _END_ of _TOTAL_ commissions"
        }
      });
    }

    if (document.getElementById('recentActivityTable')) {
      $('#recentActivityTable').DataTable({
        pageLength: 5,
        lengthMenu: [5, 10, 25],
        order: [[4, 'desc']], // Sort by timestamp
        language: {
          search: "üîç Search:",
          lengthMenu: "_MENU_ per page",
          info: "Showing _START_ to _END_ of _TOTAL_ activities"
        }
      });
    }
  });
</script>
{% endblock %}