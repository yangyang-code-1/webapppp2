{% extends 'base.html.twig' %}

{% block title %}Artist Profile{% endblock %}

{% block body %}
<style>
main{
  background-color: #fff;
}
body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #7c3aed, #a855f7);
  font-family: 'Inter', sans-serif;
}
.artist-header {
    background: rgb(218, 192, 245);
    padding: 2rem 1.5rem;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
.artist-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    margin-top: 40px;
}
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
}

.product-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: box-shadow 0.2s;
}

.product-card:hover,
.portfolio-card:hover {
  transform: translateY(-4px);
  transition: transform 0.2s ease;
}

.product-image {
    width: 100%;
    max-width: 200px;
    border-radius: 6px;
    margin-bottom: 1rem;
}

.product-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    text-align: center;
}

/* Product Image Modal Styles */
#product-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.7);
    align-items: center;
    justify-content: center;
}
#product-modal.active {
    display: flex;
}
#product-modal .modal-content {
    position: relative;
    background: #fff;
    padding: 1.5rem 1rem;
    border-radius: 12px;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow-y: auto;
}
#product-modal .close {
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    font-size: 2rem;
    cursor: pointer;
}
#product-modal-img {
    width: 300px;
    max-width: 100%;
    max-height: 60vh;
    border-radius: 8px;
}

.artist-profile {
    margin-top: 2rem;
}

.product-price {
    color: #2d8f2d;
    font-size: 1rem;
    margin-bottom: 1rem;
}

.product-description {
    font-size: 0.95rem;
    color: #555;
    text-align: center;
}

.modal {
  position: fixed;
  z-index: 1000;
  left: 0; top: 0;
  width: 100%; 
  height: 100%;
  overflow: auto;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-content {
  background: #fff;
  padding: 2rem;
  border-radius: 8px;
  position: relative;
  max-width: 400px;
  width: 100%;
}
.modal-content.modal-flex {
    width: 1800px;
    height: 720px;
    max-width: 100%;
    padding: 1.5rem 1rem;
    border-radius: 12px;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.close {
  position: absolute;
  top: 1rem; right: 1rem;
  font-size: 2rem;
  cursor: pointer;
}

.portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.portfolio-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 180px;
}

.portfolio-image {
    width: 100%;
    max-width: 180px;
    border-radius: 6px;
    margin-bottom: 0.5rem;
}

.portfolio-title {
    font-size: 1rem;
    font-weight: 500;
    text-align: center;
}
.btn.btn-success,
.btn-tab {
  background: #fff;
  border: 2px solid #370d46ff;
  border-radius: 9999px;
  color: #370d46ff;
  padding: 0.5rem 1.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}
.btn-tab:hover {
  background: #370d46ff;
  color: #fff;
}
.btn-tab.active {
  background: #370d46ff;
  color: #fff;
  margin-left: 35rem;
}
:root {
  --bg-main: #f0aafeff;
  --bg-header: #dac0f5;
  --accent: #370d46;
  --text-dark: #333;
  --text-muted: #555;
}
.btn-request {
  background-color: #370d46; /* deep purple accent */
  color: #fff;
  border: none;
  border-radius: 9999px;
  padding: 0.5rem 1.5rem;
  font-weight: 600;
  font-size: 1rem;
  transition: background 0.3s ease;
  display: inline-block;
  margin-bottom: 2rem;
  margin-left: 75rem;
  margin-right: 2rem;
}

.btn-request:hover {
  background-color: #4e1763;
}
</style>

